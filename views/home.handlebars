<row id="movies">
<column id="recentlyAdded">
  <section class="card">
      <div class="card-body">
        <h3 class="card-title">Recently Added</h3>
        <table>
          <tr>
          {{#each movies}}
            <td>
              <a href="/movie/{{id}}" class="card-body">
              <img src="{{movieImage}}">
              </a>
            </td>
          {{/each}}
          </tr>
        </table>
      </div>
  </section>
</column>
<column id="favorites" class="card">
  <div class="card-body">
  <h3 class="card-title text-center">My Favorites</h3>
  <ul>
    {{#each movies as |movie|}}
    {{#if favorite}}
    <li>
      <a href="/movie/{{id}}">{{movieTitle}}</a>
    </li>
    {{/if}}
    {{else}}
    <li>
      <p>No Favorites</p>
    </li>
    {{/each}}
  </ul>
</div>
</column>
</row>
<row id="shows">
  <column id="recentlyAdded">
    <section class="card">
      <div class="card-body">
        <h3 class="card-title">Recently Added</h3>
        <table>
          <tr>
          {{#each shows as |show|}}
            <td>
              <a href="/shows/{{id}}" class="card-body">
              <img src="{{showImage}}">
              </a>
            </td>
          {{/each}}
          </tr>
        </table>
      </div>
    </section>
  </column>
  <column id="favorites" class="card">
  <div class="card-body">
  <h3 class="card-title text-center">My Favorites</h3>
  <ul>
    {{#each shows as |show|}}
    {{#if favorite}}
    <li>
      <a href="/shows/{{id}}">{{showTitle}}</a>
    </li>
    {{/if}}
    {{else}}
    <li>
      <p>No Favorites</p>
    </li>
    {{/each}}
  </ul>
</div>
</column>
</row>
