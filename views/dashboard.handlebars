<row id="myStuff">
  <column id="myMovies">
    <section class="card">
        <div class="card-body">
          <h3 class="card-title">My Movies</h3>
          <table>
            <tr>
              {{#each movies}}
            <td>
              <a href="/movies/{{id}}" class="card-body">
              <img src="{{movieImage}}">
              </a>
            </td>
          {{/each}}
            </tr>
          </table>
        </div>
    </section>
    <br/>
    <div class="btn-container">
      <button class="btn btn-dark">+ Add Movie</button>
      <button class="btn btn-dark">- Delete Movie</button>
    </div>
  </column>
  <column id="myShows">
    <section class="card">
        <div class="card-body">
          <h3 class="card-title">My Shows</h3>
          <table>
            <tr>
              {{#each shows}}
            <td>
              <a href="/shows/{{id}}" class="card-body">
              <img src="{{showImage}}">
              </a>
            </td>
          {{/each}}
            </tr>
          </table>
        </div>
    </section>
    <br/>
    <div class="btn-container">
      <button class="btn btn-dark">+ Add Show</button>
      <button class="btn btn-dark">- Delete Show</button>
    </div>
  </column>
</row>
