<section id="newMovie">
    <section class="card">
      <div class="card-body">
      <form id="newMovieForm">
        <div class="form-group mb-2">
          <label class="form-label" for="movieTitle">Title</label><br>
          <input class="form-control" type="text" id="movieTitle" placeholder="Enter movie title">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieYear">Year</label><br>
          <input class="form-control" type="text" id="movieYear" placeholder="Enter movie year">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieSynopsis">Synopsis</label><br>
          <textarea class="form-control" type="text" id="movieSynopsis" placeholder="Enter movie synopsis"></textarea>
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieDirector">Director</label><br>
          <input class="form-control" type="text" id="movieDirector" placeholder="Enter movie director">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieWriter">Writer</label><br>
          <input class="form-control" type="text" id="movieWriter" placeholder="Enter movie writer">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieActors">Actors</label><br>
          <input class="form-control" type="text" id="movieActors" placeholder="Enter movie actors">
        </div>
        <div class="form-group mb-2">
          <label class="form-label" for="movieImage">Poster</label><br>
          <input class="form-control" type="file" id="movieImage" accept="image/*" />
        </div>
        <button class="btn btn-dark" type="submit">Create</button>
    </form>
  </div>
    </section>
  </section>
  <script src="/js/newMovie.js"></script>
